<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos necesarios para la aplicación -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    
    <!-- Declarar que la aplicación requiere cámara -->
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/vistu"
        android:label="@string/app_name"
        android:roundIcon="@drawable/vistu"
        android:supportsRtl="true"
        android:theme="@style/Theme.Vistual">
        
        <!-- Actividad de Login como actividad principal -->
        <activity
            android:name=".view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Actividad de Registro -->
        <activity
            android:name=".view.RegisterActivity"
            android:exported="false" />
        
        <!-- Actividad Principal del Closet -->
        <activity
            android:name=".view.MainActivity"
            android:exported="false" />
            
        <!-- Actividad para Agregar Prendas -->
        <activity
            android:name=".view.AgregarPrendaActivity"
            android:exported="false" />
            
    </application>

</manifest>